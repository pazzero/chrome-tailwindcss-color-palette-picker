{
  "manifest_version": 3,
  "name": "Tailwind CSS Color Picker",
  "version": "1.0.0",
  "description": "Quickly get color codes from the Tailwind CSS palette.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "permissions": ["storage"]
}
